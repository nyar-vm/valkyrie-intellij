<idea-plugin>
	<id>Valkyrie</id>
	<name>Valkyrie Language</name>
	<vendor>voml</vendor>
	<!-- Product and plugin compatibility requirements -->
	<!-- https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html -->
	<depends>com.intellij.modules.platform</depends>
	<!--    <depends optional="true" config-file="plugin-with-rust.xml">org.rust.lang</depends>-->
	<resource-bundle>messages.ValkyrieBundle</resource-bundle>
	<extensions defaultExtensionNs="com.intellij">
		<fileType
				name="Fluent"
				language="Valkyrie"
				extensions="vk;"
				implementationClass="com.github.valkyrie.ide.view.VkFileType"
				fieldName="INSTANCE"
		/>
		<lang.parserDefinition
				language="Valkyrie"
				implementationClass="com.github.valkyrie.language.psi.ValkyrieParserDefinition"
		/>
		<!-- StructureView -->
		<!--iconProvider implementation="com.github.valkyrie.ide.view.FluentIconProvider"-->
		<lang.psiStructureViewFactory language="Valkyrie"
		                              implementationClass="com.github.valkyrie.ide.view.ValkyrieStructureViewFactory"/>
		<projectViewNestingRulesProvider implementation="com.github.valkyrie.ide.view.VkFileGroup"/>
		<!-- Highlight -->
		<additionalTextAttributes scheme="Default" file="colors/ValkyrieDefault.xml"/>
		<additionalTextAttributes scheme="Darcula" file="colors/ValkyrieDarcula.xml"/>
		<colorSettingsPage implementation="com.github.valkyrie.ide.highlight.VkHighlightSetting"/>
		<highlightVisitor implementation="com.github.valkyrie.ide.highlight.VkHighlightVisitor"/>
		<lang.syntaxHighlighter
				language="Valkyrie"
				implementationClass="com.github.valkyrie.ide.highlight.VkSyntaxHighlighter"
		/>
		<!-- Formatter -->
		<lang.formatter
				language="Valkyrie"
				implementationClass="com.github.valkyrie.ide.formatter.FluentFormatBuilder"
		/>
		<lang.commenter
				language="Valkyrie"
				implementationClass="com.github.valkyrie.ide.formatter.JssCommenter"
		/>
		<lang.smartEnterProcessor
				language="Valkyrie"
				implementationClass="com.github.valkyrie.ide.formatter.JssSmartEnter"
		/>
		<!-- Document -->
		<!--documentationProvider implementation="com.github.valkyrie.ide.doc.JssDocumentationExtender"-->
<!--		<psi.referenceContributor implementation="com.github.valkyrie.ide.doc.JssUrlReferenceContributor"/>-->
<!--		<lang.documentationProvider-->
<!--				language="Valkyrie"-->
<!--				implementationClass="com.github.valkyrie.ide.doc.JssDocumentationProvider"-->
<!--		/>-->
		<lang.braceMatcher
				language="Valkyrie"
				implementationClass="com.github.valkyrie.ide.matcher.ValkyrieBraceMatcher"
		/>
<!--		<lang.quoteHandler-->
<!--				language="Valkyrie"-->
<!--				implementationClass="com.github.valkyrie.ide.matcher.JssQuoteHandler"-->
<!--		/>-->
		<lang.foldingBuilder
				language="Valkyrie"
				implementationClass="com.github.valkyrie.ide.matcher.ValkyrieFoldingBuilder"
		/>
<!--		<indexPatternBuilder-->
<!--				implementation="com.github.valkyrie.ide.todo.VomlTodoIndexPatternBuilder"-->
<!--		/>-->
<!--		<todoIndexer-->
<!--				filetype="Fluent"-->
<!--				implementationClass="com.github.valkyrie.ide.todo.VomlTodoIndexer"-->
<!--		/>-->
<!--		<completion.contributor-->
<!--				language="Valkyrie"-->
<!--				implementationClass="com.github.valkyrie.ide.completion.VomlOptionCompletionContributor"-->
<!--		/>-->

		<annotator language="Valkyrie" implementationClass="com.github.valkyrie.ide.annotator.LiteralChecker"/>

		<langCodeStyleSettingsProvider
				implementation="com.github.valkyrie.ide.codeStyle.VomlLanguageCodeStyleSettingsProvider"
		/>

	</extensions>
	<actions>
		<action id="NewFluentFile" class="com.github.valkyrie.ide.actions.FluentCreateFile">
			<add-to-group group-id="NewGroup" anchor="before" relative-to-action="NewHtmlFile"/>
		</action>
		<action id="jss.JssConvertJson"
		        class="com.github.valkyrie.ide.actions.FluentConvertMo"/>
		<group id="jss.JssGenerator" popup="true" text="JssGenerator">
			<reference ref="NewFluentFile"/>
<!--			<reference ref="jss.JssConvertJson"/>-->
<!--			<add-to-group group-id="EditorPopupMenu" anchor="after" relative-to-action="Github.Create.Gist"/>-->
<!--			<add-to-group group-id="ProjectViewPopupMenu" anchor="after" relative-to-action="Github.Create.Gist"/>-->
<!--			<add-to-group group-id="EditorTabPopupMenu" anchor="after" relative-to-action="Github.Create.Gist"/>-->
<!--			<add-to-group group-id="ConsoleEditorPopupMenu" anchor="after" relative-to-action="Github.Create.Gist"/>-->
		</group>
	</actions>
</idea-plugin>
